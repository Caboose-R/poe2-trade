{
  "name": "poe2-trade",
  "version": "1.0.0",
  "description": "Path of Exile 2 Trading Application - Standalone Executable",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "node build.js",
    "build-dev": "electron-builder --dir",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "path-of-exile",
    "poe2",
    "trading",
    "electron",
    "standalone"
  ],
  "author": "PoE2 Trade Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^24.9.1",
    "prebuild-install": "^7.1.3"
  },
  "dependencies": {
    "async-mutex": "^0.1.3",
    "axios": "^1.6.2",
    "better-sqlite3": "^11.6.0",
    "bottleneck": "^2.19.2",
    "crypto-js": "^4.2.0",
    "python-shell": "^5.0.0",
    "screenshot-desktop": "^1.15.0",
    "ws": "^8.14.2",
    "yaml": "^2.3.4"
  },
  "build": {
    "appId": "com.poe2trade.app",
    "productName": "PoE2 Trade",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "python/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!node_modules/better-sqlite3/build/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraResources": [
      {
        "from": "python",
        "to": "python"
      }
    ],
    "extraFiles": [
      {
        "from": "python",
        "to": "python"
      }
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  },
  "pkg": {
    "assets": [
      "src/**/*",
      "python/**/*",
      "assets/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ]
  }
}
